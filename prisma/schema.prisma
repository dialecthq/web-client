// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id String @id
  name String?
  username String @unique
  bio String?
  countryFrom Int?
  countryLivingIn Int?
  languageKeys Int[]
  languageLevels Int[]
  posts Post[]
  email String @unique
  avatar String?
  followers User[] @relation("followers")
  following User[] @relation("followers")
  likedPosts Post[] @relation("likes")
  tokens Int
  notifications Notification[] @relation("notifications")
  actions Notification[] @relation("actions")
}

model Post {
  id String @id @default(uuid()) @unique
  body String
  authorId String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  author User @relation(fields: [authorId], references: [id])
  likes User[] @relation("likes")
  replies Post[] @relation("replies")
  replyTo Post[] @relation("replies")
}

model Notification {
  id String @id @default(uuid()) @unique
  type String
  createdAt DateTime @default(now())
  notifyingUser User[] @relation("notifications")
  actionAuthor User[] @relation("actions")
  actionAuthorId String
  actionAuthorUsername String
}
